@* Orders/Index.cshtml *@
@model List<Order>
@{
    ViewData["Title"] = ViewBag.IsLibrarianOrAdmin == true ? "Toutes les Commandes" : "Mes Commandes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>
        <i class="fas fa-receipt me-3"></i>
        @ViewData["Title"]
    </h1>
    @if (ViewBag.IsLibrarianOrAdmin == true)
    {
        <div class="btn-group">
            <button type="button" class="btn btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown">
                <i class="fas fa-filter me-2"></i>Filtrer par statut
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" asp-action="Index">Toutes</a></li>
                @foreach (var status in ViewBag.OrderStatuses)
                {
                    <li><a class="dropdown-item" asp-action="Index" asp-route-status="@status.Value">@status.Text</a></li>
                }
            </ul>
        </div>
    }
</div>

@if (Model.Any())
{
    <div class="row">
        @foreach (var order in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span class="fw-bold">Commande #@order.Id</span>
                        <order-status status="@order.Status"></order-status>
                    </div>
                    <div class="card-body">
                        <div class="mb-2">
                            <i class="fas fa-calendar me-2"></i>
                            <small class="text-muted">@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</small>
                        </div>
                        <div class="mb-2">
                            <i class="fas fa-user me-2"></i>
                            <span>@order.CustomerName</span>
                        </div>
                        @if (ViewBag.IsLibrarianOrAdmin == true)
                        {
                            <div class="mb-2">
                                <i class="fas fa-envelope me-2"></i>
                                <small class="text-muted">@order.CustomerEmail</small>
                            </div>
                        }
                        <div class="mb-3">
                            <i class="fas fa-boxes me-2"></i>
                            <span>@order.TotalItems article(s)</span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="fw-bold">Total:</span>
                            <price-display price="@order.TotalAmount" size="normal"></price-display>
                        </div>

                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-primary w-100">
                            <i class="fas fa-eye me-2"></i>Voir détails
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-receipt fa-4x text-muted mb-4"></i>
        <h4 class="text-muted">
            @if (ViewBag.IsLibrarianOrAdmin == true)
            {
                <span>Aucune commande pour le moment</span>
            }
            else
            {
                <span>Vous n'avez pas encore passé de commande</span>
            }
        </h4>
        <p class="text-muted">
            @if (ViewBag.IsLibrarianOrAdmin != true)
            {
                <span>Découvrez notre catalogue et passez votre première commande !</span>
                <br />
                <a asp-controller="Books" asp-action="Index" class="btn btn-primary mt-3">
                    <i class="fas fa-book me-2"></i>Parcourir le catalogue
                </a>
            }
        </p>
    </div>
}
