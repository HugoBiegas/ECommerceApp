<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookStore</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ECommerceApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow">
            <div class="container">
                <!-- Brand -->
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-book me-2"></i>BookStore
                </a>

                <!-- Mobile Toggle -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navigation -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <!-- Left Navigation -->
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Accueil
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Books" asp-action="Index">
                                <i class="fas fa-book me-1"></i>Catalogue
                            </a>
                        </li>

                        <li class="nav-item dropdown" asp-role="@UserRole.Librarian">
                            <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-cog me-1"></i>Administration
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="Index" asp-role="@UserRole.Admin">
                                        <i class="fas fa-dashboard me-2"></i>Tableau de bord
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="Users" asp-role="@UserRole.Admin">
                                        <i class="fas fa-users me-2"></i>Gestion utilisateurs
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Authors" asp-action="">
                                        <i class="fas fa-users me-2"></i>Gestion des autors
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="Statistics" asp-role="@UserRole.Admin">
                                        <i class="fas fa-chart-bar me-2"></i>Statistiques
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Orders" asp-action="">
                                        <i class="fas fa-chart-bar me-2"></i>Commandes boutique
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Books" asp-action="Create">
                                        <i class="fas fa-dashboard me-2"></i>Ajouter un livre
                                    </a>
                                </li>
                            </ul>
                        </li>

                    </ul>

                    <!-- Right Navigation -->
                    <ul class="navbar-nav">
                        @if (ViewBag.IsLoggedIn == true)
                        {
                            <!-- Cart -->
                            <li class="nav-item">
                                <a class="nav-link position-relative" asp-controller="Cart" asp-action="Index">
                                    <i class="fas fa-shopping-cart"></i>
                                    @if (ViewBag.CartItemsCount != null && ViewBag.CartItemsCount > 0)
                                    {
                                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                            @ViewBag.CartItemsCount
                                        </span>
                                    }
                                </a>
                            </li>

                            <!-- User Menu -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown"
                                   role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-circle me-2"></i>
                                    <span class="me-1">@ViewBag.UserEmail</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <h6 class="dropdown-header d-flex align-items-center">
                                            @if (ViewBag.UserRole != null)
                                            {
                                                <role-badge role="@Enum.Parse<UserRole>(ViewBag.UserRole.ToString())"></role-badge>
                                            }
                                        </h6>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                            <i class="fas fa-user me-2"></i>Mon Profil
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Orders" asp-action="Index">
                                            <i class="fas fa-history me-2"></i>Mes Commandes
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form method="post" asp-controller="Account" asp-action="Logout" class="d-inline">
                                            <button type="submit" class="dropdown-item">
                                                <i class="fas fa-sign-out-alt me-2"></i>Déconnexion
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-1"></i>Connexion
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus me-1"></i>Inscription
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-shrink-0">
        <!-- Messages Toast -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="toast-container position-fixed top-0 end-0 p-3">
                <div class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="toast-header bg-success text-white">
                        <i class="fas fa-check-circle me-2"></i>
                        <strong class="me-auto">Succès</strong>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                    <div class="toast-body">
                        @TempData["SuccessMessage"]
                    </div>
                </div>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="toast-container position-fixed top-0 end-0 p-3">
                <div class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="toast-header bg-danger text-white">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong class="me-auto">Erreur</strong>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                    <div class="toast-body">
                        @TempData["ErrorMessage"]
                    </div>
                </div>
            </div>
        }

        @if (TempData["InfoMessage"] != null)
        {
            <div class="toast-container position-fixed top-0 end-0 p-3">
                <div class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="toast-header bg-info text-white">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong class="me-auto">Information</strong>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                    <div class="toast-body">
                        @TempData["InfoMessage"]
                    </div>
                </div>
            </div>
        }

        <!-- Page Content -->
        <div class="container-fluid py-4">
            @RenderBody()
        </div>
    </main>

    <footer class="bg-dark text-light mt-5">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-light"><i class="fas fa-book me-2"></i>BookStore</h5>
                    <p class="text-light">Votre librairie en ligne de confiance</p>
                </div>
                <div class="col-md-3">
                    <h6 class="text-light">Liens rapides</h6>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="Privacy" class="text-light text-decoration-none">Confidentialité</a></li>
                    </ul>
                </div>
            </div>
            <hr class="my-4">
            <div class="row">
                <div class="col-md-6">
                    <small>&copy; 2025 - BookStore - Tous droits réservés</small>
                </div>
                <div class="col-md-6 text-md-end">
                    <small>Développé pour Marcel Stefan Wagner, PhD</small>
                </div>
            </div>
        </div>
    </footer>

    <!-- JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- The cart functionality is now handled entirely in site.js -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>