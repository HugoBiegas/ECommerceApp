@* Shared/Error.cshtml - Version mise à jour *@
@model ErrorViewModel
@{
    ViewData["Title"] = "Erreur";
}

<div class="text-center py-5">
    <div class="mb-4">
        <i class="fas fa-exclamation-triangle fa-4x text-danger"></i>
    </div>

    <h1 class="display-4 text-danger">Oups ! Une erreur est survenue</h1>
    <p class="lead text-muted mb-4">
        Nous nous excusons pour ce désagrément. Une erreur inattendue s'est produite.
    </p>

    @if (Model.ShowRequestId)
    {
        <div class="alert alert-info d-inline-block">
            <strong>ID de la requête :</strong> <code>@Model.RequestId</code>
            <br />
            <small class="text-muted">Veuillez noter cet identifiant si vous contactez le support.</small>
        </div>
    }

    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg me-3">
            <i class="fas fa-home me-2"></i>Retour à l'accueil
        </a>
        <button onclick="history.back()" class="btn btn-outline-secondary btn-lg">
            <i class="fas fa-arrow-left me-2"></i>Page précédente
        </button>
    </div>

    @if (Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Development")
    {
        <div class="mt-5">
            <div class="card text-start">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="fas fa-bug me-2"></i>Mode Développement
                    </h5>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        Vous êtes en mode <strong>Development</strong>. Ce mode affiche des informations
                        détaillées sur les erreurs pour faciliter le débogage.
                    </p>
                    <div class="alert alert-danger">
                        <strong>⚠️ Important :</strong> Le mode Development ne doit jamais être activé
                        en production car il peut exposer des informations sensibles.
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .stat-card {
        padding: 20px;
        border-radius: 10px;
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.8) 0%, rgba(248, 249, 250, 0.9) 100%);
        margin: 10px;
        transition: transform 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-5px);
        }
</style>