@* Authors/Delete.cshtml *@
@model Author
@{
    ViewData["Title"] = "Supprimer " + Model.Name;
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-danger text-white text-center">
                <h4 class="mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Confirmer la suppression
                </h4>
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <i class="fas fa-user-circle fa-5x text-muted"></i>
                    <h3 class="mt-3">@Model.Name</h3>
                    @if (!string.IsNullOrEmpty(Model.Nationality))
                    {
                        <p class="text-muted">@Model.Nationality</p>
                    }
                </div>

                @if (ViewBag.CanDelete == false)
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Impossible de supprimer cet auteur !</strong>
                        <br />
                        Cet auteur a des livres associés dans le catalogue. Supprimez d'abord tous ses livres.
                    </div>

                    <h6>Livres associés :</h6>
                    <ul class="list-group list-group-flush">
                        @foreach (Book book in ViewBag.AssociatedBooks)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @book.Title
                                <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id"
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </li>
                        }
                    </ul>

                    <div class="text-center mt-4">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="fas fa-arrow-left me-2"></i>Retour aux détails
                        </a>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Attention !</strong> Vous êtes sur le point de supprimer définitivement cet auteur.
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Biography))
                    {
                        <div class="mb-3">
                            <h6>Biographie :</h6>
                            <p class="text-muted">@Model.Biography</p>
                        </div>
                    }

                    <div class="alert alert-danger">
                        <i class="fas fa-info-circle me-2"></i>
                        Cette action est <strong>irréversible</strong>. L'auteur sera définitivement supprimé.
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Annuler
                        </a>
                        <form method="post" asp-action="Delete" asp-route-id="@Model.Id" class="d-inline">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>Confirmer la suppression
                            </button>
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>
</div>