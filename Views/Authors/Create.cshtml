@* Authors/Create.cshtml *@
@model Author
@{
    ViewData["Title"] = "Ajouter un auteur";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">
                    <i class="fas fa-user-plus me-2"></i>Ajouter un nouvel auteur
                </h4>
            </div>
            <div class="card-body">
                <form method="post" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">
                            <i class="fas fa-signature me-2"></i>Nom complet de l'auteur
                        </label>
                        <input asp-for="Name" class="form-control" placeholder="Ex: Victor Hugo" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Nationality" class="form-label">
                                <i class="fas fa-flag me-2"></i>Nationalité
                            </label>
                            <input asp-for="Nationality" class="form-control" placeholder="Ex: Française" />
                            <span asp-validation-for="Nationality" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="BirthDate" class="form-label">
                                <i class="fas fa-birthday-cake me-2"></i>Date de naissance
                            </label>
                            <input asp-for="BirthDate" type="date" class="form-control" />
                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Biography" class="form-label">
                            <i class="fas fa-quote-left me-2"></i>Biographie
                        </label>
                        <textarea asp-for="Biography" class="form-control" rows="5"
                                  placeholder="Décrivez la vie et l'œuvre de cet auteur..."></textarea>
                        <span asp-validation-for="Biography" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fas fa-save me-2"></i>Ajouter l'auteur
                        </button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="fas fa-times me-2"></i>Annuler
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
