@* Account/Profile.cshtml *@
@model ProfileViewModel
@{
    ViewData["Title"] = "Mon Profil";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="fas fa-user me-2"></i>
                    Mon Profil
                </h4>
            </div>
            <div class="card-body">
                <form method="post" asp-action="UpdateProfile">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FirstName" class="form-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName" class="form-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Username" class="form-label"></label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Mettre à jour mon profil
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Informations du compte -->
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>Informations du compte
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <h6>Statut du compte</h6>
                    <role-badge role="@Model.Role"></role-badge>
                </div>

                <div class="mb-3">
                    <h6>Mes crédits</h6>
                    <credit-display amount="@Model.Credits" size="large" additional-class="text-success"></credit-display>
                </div>

                <div class="mb-3">
                    <h6>Membre depuis</h6>
                    <p class="text-muted">@Model.CreatedDate.ToString("dd MMMM yyyy")</p>
                </div>

                @if (ViewBag.CanRequestLibrarian == true)
                {
                    <hr />
                    <div class="text-center">
                        <h6>Devenir Libraire</h6>
                        <p class="small text-muted">
                            Rejoignez notre équipe de libraires et aidez à gérer le catalogue.
                        </p>
                        <a asp-action="RequestLibrarian" class="btn btn-outline-primary">
                            <i class="fas fa-user-plus me-2"></i>Faire une demande
                        </a>
                    </div>
                }
                else if (ViewBag.HasPendingLibrarianRequest == true)
                {
                    <hr />
                    <div class="alert alert-info">
                        <i class="fas fa-clock me-2"></i>
                        Votre demande de libraire est en cours d'examen.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
