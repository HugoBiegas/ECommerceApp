@* Books/Delete.cshtml *@
@model Book
@{
    ViewData["Title"] = "Supprimer " + Model.Title;
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-danger text-white text-center">
                <h4 class="mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Confirmer la suppression
                </h4>
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <img src="@(!string.IsNullOrEmpty(Model.ImageUrl) ? Model.ImageUrl : "/images/book-placeholder.jpg")"
                         class="img-fluid rounded" alt="@Model.Title" style="max-height: 200px;" />
                </div>

                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Attention !</strong> Vous êtes sur le point de supprimer définitivement ce livre :
                </div>

                <table class="table table-borderless">
                    <tr>
                        <td><strong>Titre :</strong></td>
                        <td>@Model.Title</td>
                    </tr>
                    <tr>
                        <td><strong>Auteur :</strong></td>
                        <td>@(Model.Author?.Name ?? "Auteur inconnu")</td>
                    </tr>
                    <tr>
                        <td><strong>Catégorie :</strong></td>
                        <td><category-badge category="@Model.Category"></category-badge></td>
                    </tr>
                    <tr>
                        <td><strong>Prix :</strong></td>
                        <td><price-display price="@Model.Price"></price-display></td>
                    </tr>
                    <tr>
                        <td><strong>Stock :</strong></td>
                        <td>@Model.Stock exemplaire(s)</td>
                    </tr>
                </table>

                <div class="alert alert-danger">
                    <i class="fas fa-info-circle me-2"></i>
                    Cette action est <strong>irréversible</strong>. Le livre sera définitivement supprimé de la base de données.
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Annuler
                    </a>
                    <form method="post" asp-action="Delete" asp-route-id="@Model.Id" class="d-inline">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Confirmer la suppression
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>