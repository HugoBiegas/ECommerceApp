@* Books/Create.cshtml *@
@model BookCreateEditViewModel
@{
    ViewData["Title"] = "Ajouter un livre";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">
                    <i class="fas fa-plus me-2"></i>Ajouter un nouveau livre
                </h4>
            </div>
            <div class="card-body">
                <form method="post" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label asp-for="Title" class="form-label"></label>
                            <input asp-for="Title" class="form-control" placeholder="Entrez le titre du livre" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="ISBN" class="form-label">ISBN</label>
                            <input asp-for="ISBN" class="form-control" placeholder="978-xxx-xxxx" />
                            <span asp-validation-for="ISBN" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="AuthorId" class="form-label"></label>
                            <select asp-for="AuthorId" class="form-select">
                                <option value="">Sélectionner un auteur</option>
                                @if (Model.Authors != null)
                                {
                                    @foreach (var author in Model.Authors)
                                    {
                                        <option value="@author.Id">@author.Name</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="AuthorId" class="text-danger"></span>
                            <small class="form-text text-muted">
                                <a href="#" class="text-decoration-none">Auteur non listé ? Contactez un administrateur.</a>
                            </small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Category" class="form-label"></label>
                            <select asp-for="Category" class="form-select">
                                @foreach (var category in ViewBag.Categories)
                                {
                                    <option value="@category.Value">@category.Text</option>
                                }
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Price" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">€</span>
                                <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="19.99" />
                            </div>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Stock" class="form-label">Stock</label>
                            <input asp-for="Stock" type="number" class="form-control" placeholder="10" />
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="PublicationDate" class="form-label"></label>
                            <input asp-for="PublicationDate" type="date" class="form-control" />
                            <span asp-validation-for="PublicationDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ImageUrl" class="form-label"></label>
                        <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/image.jpg" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Description du livre..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <div class="form-check">
                            <input asp-for="IsAvailable" type="checkbox" class="form-check-input" checked />
                            <label asp-for="IsAvailable" class="form-check-label">
                                Livre disponible à la vente
                            </label>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fas fa-save me-2"></i>Ajouter le livre
                        </button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="fas fa-times me-2"></i>Annuler
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
