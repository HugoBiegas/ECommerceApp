@* Books/Index.cshtml *@
@model BookListViewModel
@{
    ViewData["Title"] = "Catalogue des Livres";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>
        <i class="fas fa-book me-3"></i>
        Catalogue des Livres
    </h1>
    <div asp-role="@UserRole.Librarian">
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus me-2"></i>Ajouter un livre
        </a>
    </div>
</div>

<!-- Filtres et Recherche -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" asp-action="Index" class="row g-3">
            <div class="col-md-3">
                <label for="searchTerm" class="form-label">Rechercher</label>
                <input asp-for="SearchTerm" class="form-control" placeholder="Titre, auteur..." />
            </div>
            <div class="col-md-2">
                <label for="categoryFilter" class="form-label">Catégorie</label>
                <select asp-for="CategoryFilter" class="form-select">
                    <option value="">Toutes</option>
                    @foreach (var category in ViewBag.Categories)
                    {
                        <option value="@category.Value">@category.Text</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label for="minPrice" class="form-label">Prix min (€)</label>
                <input asp-for="MinPrice" type="number" step="0.01" class="form-control" placeholder="0" />
            </div>
            <div class="col-md-2">
                <label for="maxPrice" class="form-label">Prix max (€)</label>
                <input asp-for="MaxPrice" type="number" step="0.01" class="form-control" placeholder="100" />
            </div>
            <div class="col-md-2">
                <label for="sortBy" class="form-label">Trier par</label>
                <select asp-for="SortBy" class="form-select">
                    <option value="title">Titre A-Z</option>
                    <option value="price_asc">Prix croissant</option>
                    <option value="price_desc">Prix décroissant</option>
                    <option value="date_desc">Plus récents</option>
                    <option value="author">Auteur A-Z</option>
                </select>
            </div>
            <div class="col-md-1 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Résultats -->
<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">
                @Model.TotalCount livre(s) trouvé(s)
                @if (!string.IsNullOrEmpty(Model.SearchTerm))
                {
                    <span>pour "@Model.SearchTerm"</span>
                }
            </span>
            <div class="form-check">
                <input asp-for="AvailableOnly" type="checkbox" class="form-check-input" id="availableOnly" onchange="this.form.submit()" />
                <label class="form-check-label" for="availableOnly">
                    Disponibles uniquement
                </label>
            </div>
        </div>
    </div>
</div>

<!-- Grille des Livres -->
@if (Model.Books.Any())
{
    <div class="row" id="books-grid">
        @foreach (var book in Model.Books)
        {
            <book-card book="@book"
                       show-manage-buttons="@ViewBag.CanManageBooks"
                       show-add-to-cart="@ViewBag.IsLoggedIn">
            </book-card>
        }
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Navigation des pages" class="mt-5">
            <ul class="pagination justify-content-center">
                @if (Model.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index"
                           asp-route-page="@(Model.Page - 1)"
                           asp-route-searchTerm="@Model.SearchTerm"
                           asp-route-categoryFilter="@Model.CategoryFilter"
                           asp-route-minPrice="@Model.MinPrice"
                           asp-route-maxPrice="@Model.MaxPrice"
                           asp-route-sortBy="@Model.SortBy">
                            <i class="fas fa-chevron-left"></i> Précédent
                        </a>
                    </li>
                }

                @for (int i = Math.Max(1, Model.Page - 2); i <= Math.Min(Model.TotalPages, Model.Page + 2); i++)
                {
                    <li class="page-item @(i == Model.Page ? "active" : "")">
                        <a class="page-link" asp-action="Index"
                           asp-route-page="@i"
                           asp-route-searchTerm="@Model.SearchTerm"
                           asp-route-categoryFilter="@Model.CategoryFilter"
                           asp-route-minPrice="@Model.MinPrice"
                           asp-route-maxPrice="@Model.MaxPrice"
                           asp-route-sortBy="@Model.SortBy">
                            @i
                        </a>
                    </li>
                }

                @if (Model.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index"
                           asp-route-page="@(Model.Page + 1)"
                           asp-route-searchTerm="@Model.SearchTerm"
                           asp-route-categoryFilter="@Model.CategoryFilter"
                           asp-route-minPrice="@Model.MinPrice"
                           asp-route-maxPrice="@Model.MaxPrice"
                           asp-route-sortBy="@Model.SortBy">
                            Suivant <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-search fa-4x text-muted mb-4"></i>
        <h4 class="text-muted">Aucun livre trouvé</h4>
        <p class="text-muted">
            @if (!string.IsNullOrEmpty(Model.SearchTerm) || Model.CategoryFilter.HasValue || Model.MinPrice.HasValue || Model.MaxPrice.HasValue)
            {
                <span>Essayez de modifier vos critères de recherche.</span>
                <br />
                <a asp-action="Index" class="btn btn-primary mt-3">
                    <i class="fas fa-undo me-2"></i>Réinitialiser les filtres
                </a>
            }
            else
            {
                <span>La boutique est en cours de remplissage.</span>
            }
        </p>
    </div>
}
